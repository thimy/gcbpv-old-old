<% content_for(:page_title, @teacher.name) %>

<%= render Global::HeroComponent.new(title: @teacher.name, subtitle: "Les professeurs") %>

<section class="section">
  <div class="wrapper wrapper--text">
    <% if @teacher.picture.present? %>
      <%= image_tag @teacher.picture %>
    <% end %>
    <div>
      <% if @teacher.description.present? %>
        <%= markdown(@teacher.description) %>
      <% else %>
        Pas de description disponible pour le moment.
      <% end %>
    </div>
    <aside data-aside-position="left">
      <% if @teacher.instruments.present? %>
        <div>
          <h4 class="h4">Instruments</h4>
          <div class="tag-list">
            <% @teacher.instruments.each do |instrument| %>
              <%= link_to instrument.name, emt_instrument_path(instrument), class: "tag" %>
            <% end %>
          </div>
        </div>
      <% end %>
      <% if @teacher.workshops.present? %>
        <div>
          <h4 class="h4">Ateliers</h4>
          <div class="tag-list">
            <% @teacher.workshops.each do |workshop| %>
              <%= link_to workshop.name, emt_workshop_path(workshop), class: "tag" %>
            <% end %>
          </div>
        </div>
      <% end %>
    </aside>
    <aside data-aside-position="right">
      <nav>
        <h4 class="h5">Autres professeurs</h4>
        <% @teachers.each do |teacher| %>
          <% if teacher != @teacher %>
            <%= link_to teacher.name, emt_teacher_path(teacher) %>
          <% end %>
        <% end %>
      </nav>
    </aside>
  </div>
</section>
